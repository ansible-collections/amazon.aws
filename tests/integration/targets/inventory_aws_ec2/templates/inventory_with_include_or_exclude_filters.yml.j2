plugin: amazon.aws.aws_ec2
access_key: '{{ aws_access_key }}'
secret_key: '{{ aws_secret_key }}'
{% if security_token | default(false) %}
session_token: '{{ security_token }}'
{% endif %}
regions:
- '{{ aws_region }}'
filters:
  tag:Name:
  - '{{ resource_prefix }}_1'
  - '{{ resource_prefix }}_3'
include_filters:
- tag:Name:
  - '{{ resource_prefix }}_2'
  - '{{ resource_prefix }}_4'
exclude_filters:
- tag:Name:
  - '{{ resource_prefix }}_3'
  - '{{ resource_prefix }}_4'
hostnames:
- tag:Name
- dns-name
