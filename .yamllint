---
rules:
  indentation:
    ignore: &default_ignores |
      # automatically generated, we can't control it
      changelogs/changelog.yaml
      # Will be gone when we release and automatically reformatted
      changelogs/fragments/*
  document-start:
    ignore: *default_ignores
  line-length:
    ignore: *default_ignores
    max: 160

ignore-from-file: .gitignore
